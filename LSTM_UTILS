    def cluster_data(self, GP0, GP1):
        return self.processor.cluster_data(GP0, GP1)

    def run_graphing(self, df):
        return self.graph.generate_graphs(df)

    def run_lstm(self, X):
        return self.lstm.forward(X) if self.lstm else None

